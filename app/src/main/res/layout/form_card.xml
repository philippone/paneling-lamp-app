<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/card_from_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_heigh"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/card_form_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/card_from_thumbnail"
        android:layout_alignTop="@+id/card_from_thumbnail"
        android:layout_alignRight="@+id/card_from_thumbnail"
        android:layout_alignBottom="@+id/card_from_thumbnail"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Name"
        android:textColor="#FFFFFF" />


</RelativeLayout>
